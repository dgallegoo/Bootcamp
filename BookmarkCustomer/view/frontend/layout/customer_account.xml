<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <!-- Add menu to the end of the sidebar -->
            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="customer-account-navigation-customer-bookmarks">
                <arguments>
                    <argument name="path" xsi:type="string">bookmarks/customerbookmarks/index</argument>
                    <argument name="label" xsi:type="string">My Bookmarks</argument>
                    <argument name="sortOrder" xsi:type="number">210</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>

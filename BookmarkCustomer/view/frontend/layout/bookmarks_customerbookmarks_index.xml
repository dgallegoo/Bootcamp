<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      layout="2columns-left"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">

            <block class="Magento\Cms\Block\Block" name="page.title" >
                <arguments>
                    <argument name="block_id" xsi:type="string">bookmark-title-block</argument>
                </arguments>
            </block>

        </referenceBlock>
        <referenceContainer name="content">
            <block class="Bootcamp\BookmarkCustomer\Block\CustomerBookmarks"
                   name="bookmarks.customerbookmarks.index"
                   template="Bootcamp_BookmarkCustomer::customerbookmarks/index.phtml">
                <arguments>
                    <argument name="bookmark_model" xsi:type="object">Bootcamp\BookmarkCustomer\ViewModel\Bookmark</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
